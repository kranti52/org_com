## For ubuntu version 16.10
# sudo apt-get update
# sudo apt-get install python3.6

## For ubuntu veersion other than 16.10
# sudo apt-get update
# sudo apt-get install python3.6
# sudo apt-get install software-properties-common
# sudo add-apt-repository ppa:deadsnakes/ppa
# sudo apt-get update
# sudo apt-get install python3.6

## For OSX
brew install python
